#set($commonMysqlConfig = "{common.mysql")
server:
  port: 8080
  servlet:
    context-path: /

spring:
  main:
    allow-bean-definition-overriding: true
  jackson:
    date-format: yyyy-MM-dd HH:mm:ss
    time-zone: GMT+8
  messages:
    basename: classpath:i18n/*/messages;classpath:i18n/*/validate;classpath:i18n/common;
  jpa:
    # 启用 DDL 自动执行
    generate-ddl: true
    # 更新策略
    ddl-auto: update
  datasource:
    url: $${commonMysqlConfig}.url:jdbc:mysql://172.26.57.49:3306/${PROJECT_NAME}?useUnicode=true&characterEncoding=utf-8}
    username: $${commonMysqlConfig}.username:root}
    password: $${commonMysqlConfig}.password:root}
    driver-class-name: com.mysql.cj.jdbc.Driver
    type: com.alibaba.druid.pool.DruidDataSource
    druid:
      filters: stat
      maxActive: 20
      initialSize: 1
      maxWait: 10000
      minIdle: 1
      timeBetweenEvictionRunsMillis: 60000
      minEvictableIdleTimeMillis: 300000
      validationQuery: select 'x'
      testWhileIdle: true
      testOnBorrow: false
      testOnReturn: false
      poolPreparedStatements: true
      maxOpenPreparedStatements: 20

# 分页查询插件
pagehelper:
  helperDialect: mysql
  reasonable: true
  supportMethodsArguments: true
  params: count=countSql

# mybatis-plus相关配置
mybatis-plus:
  type-aliases-package: ${PROJECT_PACKAGE}.infrastructure.*.repository.model
  mapper-locations: classpath:mapper/**/*.xml                 # 对应mapper映射xml文件的所在路径
  configuration:
    map-underscore-to-camel-case: true                        # 是否开启自动驼峰命名规则映射
    log-impl: org.apache.ibatis.logging.stdout.StdOutImpl     # sql打印
    #log-impl: org.apache.ibatis.logging.nologging.NoLoggingImpl #关闭sql日志

#启动事件重试
domain:
  event:
    retry.enable: true

env: dev