<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wakedt.visual.bizdomain.businessscene.infrastructure.repository.mapper.BusinessSceneVersionMapper">

    <select id="businessSceneVersionQuery" parameterType="com.wakedt.visual.bizdomain.businessscene.client.request.BusinessSceneVersionQuery"
            resultType="com.wakedt.visual.bizdomain.businessscene.infrastructure.repository.model.BusinessSceneVersionDO">
        SELECT *
        FROM wd_business_scene_version t1
        <where>
            <if test="id != null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

    <select id="businessSceneVersionPageQuery" parameterType="com.wakedt.visual.bizdomain.businessscene.client.request.BusinessSceneVersionPageQuery"
            resultType="com.wakedt.visual.bizdomain.businessscene.infrastructure.repository.model.BusinessSceneVersionDO">
        SELECT *
        FROM wd_business_scene_version t1
        <where>
            <if test="businessSceneId != null and businessSceneId != ''">
                AND t1.business_scene_id LIKE CONCAT('%',#{businessSceneId},'%')
            </if>
        </where>
        ORDER BY t1.create_time
    </select>

    <select id="businessSceneLatestVersionQuery" parameterType="com.wakedt.visual.bizdomain.businessscene.client.request.BusinessSceneLatestVersionQuery"
            resultType="com.wakedt.visual.bizdomain.businessscene.infrastructure.repository.model.BusinessSceneVersionDO">
        SELECT *
        FROM wd_business_scene_version t1
        <where>
            <if test="id != null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

</mapper>