<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wakedt.visual.bizdomain.application.infrastructure.repository.mapper.ApplicationVersionMapper">

    <select id="applicationVersionQuery" parameterType="com.wakedt.visual.bizdomain.application.client.request.ApplicationVersionQuery"
            resultType="com.wakedt.visual.bizdomain.application.infrastructure.repository.model.ApplicationVersionDO">
        SELECT *
        FROM wd_application_version t1
        <where>
            <if test="id != null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

    <select id="applicationVersionPageQuery" parameterType="com.wakedt.visual.bizdomain.application.client.request.ApplicationVersionPageQuery"
            resultType="com.wakedt.visual.bizdomain.application.infrastructure.repository.model.ApplicationVersionDO">
        SELECT *
        FROM wd_application_version t1
        <where>
            <if test="applicationId != null and applicationId != ''">
                AND t1.application_id LIKE CONCAT('%',#{applicationId},'%')
            </if>
        </where>
        ORDER BY t1.create_time
    </select>

    <select id="applicationLatestVersionQuery" parameterType="com.wakedt.visual.bizdomain.application.client.request.ApplicationLatestVersionQuery"
            resultType="com.wakedt.visual.bizdomain.application.infrastructure.repository.model.ApplicationVersionDO">
        SELECT *
        FROM wd_application_version t1
        <where>
            <if test="id != null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

</mapper>