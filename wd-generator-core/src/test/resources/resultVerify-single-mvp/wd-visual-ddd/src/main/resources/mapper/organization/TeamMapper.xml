<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wakedt.visual.bizdomain.organization.infrastructure.repository.mapper.TeamMapper">

    <select id="teamQuery" parameterType="com.wakedt.visual.bizdomain.organization.client.request.TeamQuery"
            resultType="com.wakedt.visual.bizdomain.organization.infrastructure.repository.model.TeamDO">
        SELECT *
        FROM wd_organization_team t1
        <where>
            <if test="id != null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

    <select id="teamPageQuery" parameterType="com.wakedt.visual.bizdomain.organization.client.request.TeamPageQuery"
            resultType="com.wakedt.visual.bizdomain.organization.infrastructure.repository.model.TeamDO">
        SELECT *
        FROM wd_organization_team t1
        <where>
            <if test="organizationId != null">
                AND t1.organization_id = #{organizationId}
            </if>
            <if test="name != null and name != ''">
                AND t1.name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
        ORDER BY t1.create_time
    </select>

</mapper>