<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wakedt.visual.bizdomain.organization.infrastructure.repository.mapper.OrganizationMapper">

    <select id="organizationQuery" parameterType="com.wakedt.visual.bizdomain.organization.client.request.OrganizationQuery"
            resultType="com.wakedt.visual.bizdomain.organization.infrastructure.repository.model.OrganizationDO">
        SELECT *
        FROM wd_organization t1
        <where>
            <if test="id != null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

    <select id="organizationPageQuery" parameterType="com.wakedt.visual.bizdomain.organization.client.request.OrganizationPageQuery"
            resultType="com.wakedt.visual.bizdomain.organization.infrastructure.repository.model.OrganizationDO">
        SELECT *
        FROM wd_organization t1
        <where>
            <if test="name != null and name != ''">
                AND t1.name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
        ORDER BY t1.create_time
    </select>

</mapper>