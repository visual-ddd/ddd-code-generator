<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wakedt.visual.infrastructure.organization.repository.mapper.OrganizationMapper">

    <select id="organizationQuery" parameterType="com.wakedt.visual.client.organization.query.OrganizationQuery"
            resultType="com.wakedt.visual.infrastructure.organization.repository.model.OrganizationDO">
        SELECT *
        FROM organization t1
        <where>
            <if test="id!=null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

    <select id="organizationPageQuery" parameterType="com.wakedt.visual.client.organization.query.OrganizationPageQuery"
            resultType="com.wakedt.visual.infrastructure.organization.repository.model.OrganizationDO">
        SELECT *
        FROM organization t1
        <where>
            <if test="name!=null and name!=''">
                AND t1.name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="organizationInfoByAccountIdQuery" parameterType="com.wakedt.visual.client.organization.query.OrganizationInfoByAccountIdQuery"
            resultType="com.wakedt.visual.infrastructure.organization.repository.model.OrganizationDO">
        SELECT *
        FROM organization t1
        <where>
            <if test="accountId!=null">
                AND t1.account_id = #{accountId}
            </if>
        </where>
    </select>

    <select id="teamQuery" parameterType="com.wakedt.visual.client.organization.query.TeamQuery"
            resultType="com.wakedt.visual.infrastructure.organization.repository.model.OrganizationDO">
        SELECT *
        FROM organization t1
        <where>
            <if test="id!=null">
                AND t1.id = #{id}
            </if>
        </where>
    </select>

    <select id="teamPageQuery" parameterType="com.wakedt.visual.client.organization.query.TeamPageQuery"
            resultType="com.wakedt.visual.infrastructure.organization.repository.model.OrganizationDO">
        SELECT *
        FROM organization t1
        <where>
            <if test="organizationId!=null">
                AND t1.organization_id = #{organizationId}
            </if>
            <if test="name!=null and name!=''">
                AND t1.name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="teamInfoByAccountIdQuery" parameterType="com.wakedt.visual.client.organization.query.TeamInfoByAccountIdQuery"
            resultType="com.wakedt.visual.infrastructure.organization.repository.model.OrganizationDO">
        SELECT *
        FROM organization t1
        <where>
            <if test="accountId!=null">
                AND t1.account_id = #{accountId}
            </if>
        </where>
    </select>

    <select id="teamMemberByTeamIdPageQuery" parameterType="com.wakedt.visual.client.organization.query.TeamMemberByTeamIdPageQuery"
            resultType="com.wakedt.visual.infrastructure.organization.repository.model.OrganizationDO">
        SELECT *
        FROM organization t1
        <where>
            <if test="teamId!=null">
                AND t1.team_id = #{teamId}
            </if>
        </where>
    </select>

</mapper>